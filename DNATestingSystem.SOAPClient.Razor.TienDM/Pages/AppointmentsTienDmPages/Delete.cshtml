@page
@model DNATestingSystem.SOAPClient.Razor.TienDM.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>AppointmentsTienDm</h4>
    <hr />
    @if (Model.AppointmentsSoapModel != null)
    {
        <dl class="row">
            <dt class="col-sm-2">Appointment Date</dt>
            <dd class="col-sm-10">@Model.AppointmentsSoapModel.AppointmentDate</dd>
            <dt class="col-sm-2">Appointment Time</dt>
            <dd class="col-sm-10">@Model.AppointmentsSoapModel.AppointmentTime</dd>
            <dt class="col-sm-2">Sampling Method</dt>
            <dd class="col-sm-10">@Model.AppointmentsSoapModel.SamplingMethod</dd>
            <dt class="col-sm-2">Address</dt>
            <dd class="col-sm-10">@Model.AppointmentsSoapModel.Address</dd>
            <dt class="col-sm-2">Contact Phone</dt>
            <dd class="col-sm-10">@Model.AppointmentsSoapModel.ContactPhone</dd>
            <dt class="col-sm-2">Notes</dt>
            <dd class="col-sm-10">@Model.AppointmentsSoapModel.Notes</dd>
            <dt class="col-sm-2">Total Amount</dt>
            <dd class="col-sm-10">@Model.AppointmentsSoapModel.TotalAmount</dd>
            <dt class="col-sm-2">Is Paid</dt>
            <dd class="col-sm-10">@(Model.AppointmentsSoapModel.IsPaid ? "Yes" : "No")</dd>
            <dt class="col-sm-2">UserAccountId</dt>
            <dd class="col-sm-10">@Model.AppointmentsSoapModel.UserAccountId</dd>
            <dt class="col-sm-2">ServicesNhanVtid</dt>
            <dd class="col-sm-10">@Model.AppointmentsSoapModel.ServicesNhanVtid</dd>
            <dt class="col-sm-2">AppointmentStatusesTienDmid</dt>
            <dd class="col-sm-10">@Model.AppointmentsSoapModel.AppointmentStatusesTienDmid</dd>
        </dl>
        <form method="post">
            <input type="hidden" asp-for="AppointmentsSoapModel.AppointmentsTienDmid" />
            <input type="submit" value="Delete" class="btn btn-danger" /> |
            <a asp-page="./Index">Back to List</a>
        </form>
    }
    else
    {
        <div class="alert alert-warning">Appointment not found.</div>
    }
</div>
